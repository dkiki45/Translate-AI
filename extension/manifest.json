{
  "manifest_version": 3,
  "name": "Mini KUDO Modern",
  "version": "2.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "commands": {
    "toggle_kudo": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Abrir/Fechar Mini KUDO"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"] 
    }
  ]
}